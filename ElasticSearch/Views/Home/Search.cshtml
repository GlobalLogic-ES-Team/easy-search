@section scripts{
    <script type="text/javascript">
        $(document).ajaxStart(function () {
            $("#processingBar").show();
        });

        $(document).ajaxStop(function () {
            $("#processingBar").hide();
        });

        $(document).ajaxError(function () {
            $("#processingBar").hide();
        });
    </script>
}


<div>
    <h1>Text Search</h1>
    <h4>Try with random name, street, city, state, zip, cell, gender.</h4>
</div>

<div style="margin-bottom:10px;" class="container">
    <div class="col-md-3">
        <div class="input-group add-on">
            <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
            <div class="input-group-btn">
                <button onclick="Methods.Search()" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </div>
</div>

<div class="col-md-6">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title" id="title_sql"></h3>
        </div>
        <div class="panel-body">
            <div class="text-danger">Elapsed Time: <label id="elapsed_Time_sql"></label></div>
            <div >Records Found: <label id="count_sql"></label></div>
            <div class="text-danger"><label id="err_sql"></label></div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Search Result</th>
                    </tr>
                </thead>
                <tbody id="peoplelist_sql"></tbody>
            </table>
        </div>
    </div>
</div>

<div class="col-md-6">

    <div class="panel panel-warning">
        <div class="panel-heading">
            <h3 class="panel-title" id="title_es"></h3>
        </div>
        <div class="panel-body">
            <div class="text-danger">Elapsed Time: <label id="elapsed_Time_es"></label></div>
            <div class="text-danger">Records Found: <label id="count_es"></label></div>
            <div class="text-danger"><label id="err_es"></label></div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Search Result</th>
                    </tr>
                </thead>
                <tbody id="peoplelist_es"></tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/x-jquery-tmpl" id="peoplelist-template">
    <tr>
        <td>
            <div>${firstname} ${lastname}</div>
            <div>${gender}, ${dob}</div>
            <div>${street} ${city}, ${state} ${zip}</div>
            <div>${salary}, ${cell}</div>
        </td>
    </tr>
</script>

