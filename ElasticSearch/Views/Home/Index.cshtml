@{
  ViewBag.Title = "Home Page";
}

<legend>Search</legend>

<div style="margin-bottom:10px;" class="container">
    <div class="col-md-3">
            <div class="input-group add-on">
                <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
                <div class="input-group-btn">
                    <button onclick="Methods.Search()" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
    </div>
    <div class="col-md-4">Search with Elastic? &nbsp;<input type="checkbox" id="isElastic"/> </div>
    <div class="col-md-5">
        <label id="formatted_address"></label>
        <div class="text-danger">Elapsed Time: <label id="elapsed_Time"></label></div>
</div>
</div>


<div id="map"></div>

<div >
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Gender</th>
            <th>DOB</th>
            <th>Mobile</th>
            <th>Street</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Salary</th>
        </tr>
    </thead>
<tbody id="peoplelist"></tbody>
</table>
</div>

<script>

    function initMap() {
        var mapDiv = document.getElementById('map');
        var map = new google.maps.Map(mapDiv, {
            center: new google.maps.LatLng(40.0509488, -105.2628596),
            zoom: 13,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        });

        google.maps.event.addListener(map, 'click', function (args) {
            var lat = args.latLng.lat();
            var lng = args.latLng.lng();
            Methods.GetAddress(lat, lng);

        });
    }
</script>

<script type="text/x-jquery-tmpl" id="peoplelist-template">
    <tr>
        <td>${id}</td>
        <td>${firstname}</td>
        <td>${lastname}</td>
        <td>${gender}</td>
        <td>${dob}</td>
        <td>${cell}</td>
        <td>${street}</td>
        <td>${city}</td>
        <td>${state}</td>
        <td>${zip}</td>
        <td>${salary}</td>
    </tr>
</script>


