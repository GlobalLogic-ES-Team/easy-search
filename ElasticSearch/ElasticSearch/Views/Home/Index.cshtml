@{
  ViewBag.Title = "Home Page";
}

<legend>Search</legend>

<div style="margin-bottom:20px;" class="container">
    <div class="col-md-3">
            <div class="input-group add-on">
                <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
                <div class="input-group-btn">
                    <button onclick="Methods.Search()" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
    </div>
</div>

<legend>
    <label id="formatted_address"></label>
    <label id="elapsed_Time"></label>
</legend>

<div id="map"></div>

<div >
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
<tbody id="peoplelist"></tbody>
</table>
</div>

<script>

    function initMap() {
        var mapDiv = document.getElementById('map');
        var map = new google.maps.Map(mapDiv, {
            center: new google.maps.LatLng(40.0509488, -105.2628596),
            zoom: 13,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        });

        google.maps.event.addListener(map, 'click', function (args) {
            var lat = args.latLng.lat();
            var lng = args.latLng.lng();
            Methods.GetAddress(lat, lng);

        });
    }
</script>

<script type="text/x-jquery-tmpl" id="peoplelist-template">
    <tr>
        <td>${id}</td>
        <td>${firstname}</td>
        <td>${lastname}</td>
    </tr>
</script>


